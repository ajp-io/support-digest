# GitHub Personal Access Token (needs repo access for your configured organizations)
GH_TOKEN=your_github_pat_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Slack Webhook URL
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Optional: Set to 1 for dry run mode (prints summary without sending to Slack)
# DRY_RUN=1

# Optional: Hours to look back (overrides config.json default)
# HOURS_BACK=72

# Optional: Process a specific product (e.g., "product::kots")
# PRODUCT_LABEL=product::your-product
